<%- include('./partials/header.ejs') %>
    <h1>SHOP</h1>
    <div class="fishesContainer">
        <% for (let i = 0; i < seaFoods.length; i++) { %>
            <div class="fishContainer">
                <!-- good for a while loop 3 items by row -->
            <h3 class="name"><%= seaFoods[i].name %></h3>
                <div class="imgContainer">
                    <a href="/seafoodstore/<%=seaFoods[i]._id%>">
                        <img src="<%= seaFoods[i].img %>" alt="">
                    </a>
                </div>
                <% if (seaFoods[i].qty > 0) { %>
                    <h5 class="price">Price: $<%= seaFoods[i].price %></h5>
                <% } else { %>
                    <p class="out">OUT OF STOCK</p>
                <% } %>
            </div>
        <% } %>
    </div>
    <%- include('./partials/footer.ejs') %>
</body>
</html>